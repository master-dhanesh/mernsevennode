<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node Web App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<body>

    <div style="height: 100vh;" class="p-5 w-100 d-flex justify-content-between">
        <div class="left w-25 pe-2">
            <form action="/create" method="POST">
                <input class="form-control" type="text" placeholder="example.extension" name="filename">
            </form>
            <hr>
            <ul class="list-group">
                <%if(files.length===0) { %>
                    <p class="text-center text-danger">No File Present</p>

                    <% }%>
                        <% files.forEach(function(file) {%>
                            <li class="list-group-item border-0 d-flex justify-content-between">
                                <a class="text-decoration-none" href="/edit/<%= file%>">
                                    <%= file%>
                                </a>
                                <a href="/delete/<%= file%>">‚ùå</a>
                            </li>
                            <% })%>
            </ul>
        </div>

        <%if(!filedata && !filename ){%>
            <h3 class="p-5 w-100 text-center text-danger">No Files Open</h3>
            <%} else { %>

                <div class="right w-75">
                    <p>
                        <%= filename%> <a class="text-decoration-none fw-bold" href="/">x</a>
                    </p>
                    <form action="/save/<%= filename%>" method="POST">
                        <textarea rows="25" class="form-control" name="filedata"
                            placeholder="enter text here"><%= filedata%></textarea>
                        <button class="mt-2 px-5 btn btn-success">Save</button>
                    </form>
                </div>


                <%}%>

    </div>

</body>

</html>